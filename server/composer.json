{
    "require": {
        "slim/slim": "^3.0",
        "monolog/monolog": "^1.23",
        "doctrine/dbal": "^2.5",
        "doctrine/cache": "^1.6",
        "vlucas/phpdotenv": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "mediawiki/mediawiki-codesniffer": "^15.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "scripts": {
        "fix": "phpcbf",
        "lint": "parallel-lint . --exclude vendor",
        "phpcs": "phpcs -p -s",
        "phpunit": "phpunit",
        "test": [
            "@lint",
            "phpunit",
            "phpcs"
        ]
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    }
}
